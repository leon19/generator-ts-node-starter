{
  "name": "generator-ts-node-starter",
  "version": "3.1.0",
  "description": "Generator for ts-node-starter repository",
  "main": "build/index.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Lorens Le√≥n",
    "email": "lorensleon@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leon19/generator-ts-node-starter"
  },
  "keywords": [
    "yeoman-generator"
  ],
  "files": [
    "generators"
  ],
  "dependencies": {
    "chalk": "^2.4.1",
    "fs-extra": "^7.0.0",
    "husky": "^1.0.0-rc.13",
    "lint-staged": "^7.2.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "yeoman-generator": "^3.1.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/faker": "^4.1.2",
    "@types/fs-extra": "^5.0.4",
    "@types/lodash": "^4.14.115",
    "@types/mocha": "^5.2.5",
    "@types/node": "*",
    "@types/yeoman-generator": "^2.0.3",
    "@types/yeoman-test": "^1.7.4",
    "chai": "^4.1.2",
    "faker": "^4.1.0",
    "mocha": "^5.2.0",
    "npm-check-updates": "^2.14.2",
    "nsp": "^3.2.1",
    "nyc": "^12.0.2",
    "prettier": "^1.14.0",
    "standard-version": "^4.4.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^1.9.1"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build reports",
    "test": "mocha --require tests/entry 'tests/**/*.{test,spec}.ts'",
    "cover": "nyc yarn test",
    "lint": "tslint '{src,tests}/**/*.{js,ts}'",
    "lint:format": "prettier --write '{src,tests}/**/*.{js,ts}' && yarn lint --fix",
    "security": "nsp check",
    "npm:install:clean": "rm -rf node_modules yarn.lock && yarn",
    "npm:update": "ncu -a && yarn npm:install:clean",
    "npm:package": "scripts/npm-build && npm pack build && rm -rf build",
    "health": "yarn && yarn clean && yarn lint && yarn security && yarn build --noEmit && yarn test --reporter dot",
    "release": "standard-version",
    "release:major": "yarn release --release-as major"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "linters": {
      "{src,test}/**/*.{js,ts}": [
        "npx tslint --fix",
        "npx prettier --write",
        "git add"
      ],
      "*.{md,json}": [
        "npx prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "package.json",
      "tsconfig.json"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "build/**",
      "tests/**",
      "types/**",
      "node_modules/**"
    ],
    "reporter": [
      "clover",
      "cobertura",
      "html",
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "clean": true,
    "tempDirectory": "reports/.nyc_ouptut",
    "reportDir": "reports/coverage",
    "all": true
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 140,
    "tabWidth": 2
  }
}
