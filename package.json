{
  "name": "generator-ts-node-starter",
  "version": "1.0.0",
  "description": "Generator for ts-node-starter repository",
  "main": "build/index.js",
  "types": "types/index.d.ts",
  "license": "MIT",
  "author": {
    "name": "Lorens Le√≥n",
    "email": "lorensleon@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/leon19/generator-ts-node-starter"
  },
  "keywords": [
    "yeoman-generator"
  ],
  "files": [
    "generators"
  ],
  "dependencies": {
    "@types/faker": "^4.1.2",
    "@types/fs-extra": "^5.0.1",
    "@types/lodash": "^4.14.104",
    "@types/node": "*",
    "chalk": "^2.3.2",
    "faker": "^4.1.0",
    "fs-extra": "^5.0.0",
    "lodash": "^4.17.5",
    "moment": "^2.21.0",
    "yeoman-assert": "^3.1.0",
    "yeoman-generator": "^2.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^2.2.48",
    "@types/yeoman-generator": "^2.0.1",
    "@types/yeoman-test": "^1.7.3",
    "chai": "^4.1.2",
    "conventional-changelog-cli": "^1.3.16",
    "conventional-recommended-bump": "^2.0.6",
    "mocha": "^5.0.4",
    "npm-check-updates": "^2.14.1",
    "nsp": "^3.2.1",
    "nyc": "^11.4.1",
    "prettier": "^1.11.1",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "yeoman-test": "^1.7.0"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build reports types",
    "test": "mocha --require tests/entry 'tests/**/*.{test,spec}.ts'",
    "cover": "nyc yarn test",
    "lint": "tslint '{src,tests}/**/*.ts'",
    "lint:format": "prettier --write '{src,tests}/**/*.ts' && yarn lint --fix",
    "security": "nsp check",
    "git:hooks": "cp -rf scripts/git-pre-commit .git/hooks/pre-commit",
    "git:precommit": "scripts/git-pre-commit",
    "npm:install:clean": "rm -rf node_modules yarn.lock && yarn",
    "npm:update": "ncu -a && yarn npm:install:clean",
    "npm:package": "scripts/npm-build && npm pack build && rm -rf build",
    "health": "yarn && yarn clean && yarn lint && yarn security && yarn build --noEmit && yarn test --reporter dot",
    "release": "scripts/git-release",
    "release:major": "scripts/git-major-release"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "build/**",
      "tests/**",
      "types/**",
      "node_modules/**"
    ],
    "reporter": [
      "clover",
      "cobertura",
      "html",
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "clean": true,
    "tempDirectory": "reports/.nyc_ouptut",
    "reportDir": "reports/coverage",
    "all": true
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 140,
    "tabWidth": 2
  }
}
